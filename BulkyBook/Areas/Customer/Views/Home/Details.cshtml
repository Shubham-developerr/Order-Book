@model BulkyBook.Models.ShoppingCart

<body style="background-color:#e6ffe6">
    <div class="main" style="width:100%; height:800px">
        <form method="post">
            <input asp-for="ProductId" hidden />
            <div class="image" style="position:relative">
                <img class="rounded-2" src="@Model.Product.ImageUrl" style="width:300px;height:300px;"/>
            </div>
            <div class="image-side" style="position:absolute;left:450px;top:70px">
                <p style="margin-bottom:2px;font-size:35px"><b>@Model.Product.Title</b></p>
                <em style="margin-left:250px">by :@Model.Product.Author </em>
                <p style="margin-top:50px"><b>Description:</b></p>
                <p>@Html.Raw(Model.Product.Description)</p>
                <p><b>ISBN: </b>@Model.Product.ISBN</p>
                <p>ListPrice : <strike>@Model.Product.ListPrice.ToString("c")</strike></p>
                <table class=" table-striped table-borderless table-s" style="width:250px">
                    <thead  style="text-align:center">
                        <tr>
                            <td>Quantity</td>
                            <td>1-50</td>
                            <td>51-100</td>
                            <td>100+</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="text-align:center">

                            <td>Price</td>
                            <td>@Model.Product.Price</td>
                            <td>@Model.Product.Price50</td>
                            <td>@Model.Product.Price100</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <br />
            <div class="input-field" style="position:absolute;left:450px">
                <label asp-for="@Model.Count" >Count</label>
                <br />
                <input onkeydown="return false" type="number" asp-for="@Model.Count" min="1" max="1000" style="width:200px;"/>
            </div>

            <button class="btn btn-primary" style="width:150px;font-size:15px;">Add to cart</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-warning" style="width:150px;font-size:15px;">Back</a>
        </form>
        

    </div>
</body>


