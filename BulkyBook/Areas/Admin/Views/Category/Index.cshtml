@model IEnumerable<BulkyBook.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Notification" />
<div class="conatiner"> 
    <div class="category m-auto mt-5" style="width:80%">
        <h3 class="text-primary float-start mb-4">Category List</h3>
        <a class="btn btn-primary float-end mb-4" asp-controller="Category" asp-action="Create">Create Category</a>
    </div>
    <div>
        <table class="table table-success table-bordered text-center m-auto" style="width:80%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var data in Model)
            {
                <tr>
                    <td style="width:40%">@data.Name</td>
                    <td style="width:20%">@data.DisplayOrder</td>
                    <td style="width:20%"><a asp-action="Edit" asp-controller="Category" asp-route-id="@data.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@data.Id" class="btn btn-danger" >Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
    </div>
    
</div>


