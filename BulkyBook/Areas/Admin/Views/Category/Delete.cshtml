@model BulkyBook.Models.Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div asp-validation-summary="All" class="text-danger"></div>*@
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <label asp-for="Name">Name</label>
    <input asp-for="Name" type="text" class="form-control" disabled style="width:20%" />
   
    <br />
    <label asp-for="DisplayOrder">Display Order</label>
    <input asp-for="DisplayOrder" type="number" class="form-control" disabled style="width:20%"/>
    
    <br />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a class="btn btn-danger" asp-controller="Category" asp-action="Index">Return</a>
</form>

@*client side validation just we need to include the scripts file shown below*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
